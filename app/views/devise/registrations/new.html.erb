
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <center>
            <h2>Sign up</h2>
        </center>
    </div>
    <div class="col-sm-3"></div>
  </div>


  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="form-group">
            <div>
                <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first name" %>
            </div>
        </div>

        <div class="form-group">
            <div>
                <%= f.text_field :last_name, class: "form-control", placeholder: "Enter last name" %>
            </div>
        </div>

        <div class="form-group">
            <div>
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
            </div>
        </div>

        <div class="form-group">
            <div>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Choose password" %>
            </div>
        </div>

        <div class="form-group">
            <div>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Re-type password"%>
            </div>
        </div>

        <div class="form-group">
            <div>
                <%= f.submit "Sign up", class: "btn btn-primary" %>
            </div>
        </div>

        <div class="form-group">
            <div>
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
<% end %>
